{
	"branches": [
		"main",
		{
			"name": "beta",
			"prerelease": "beta"
		}
	],
	"plugins": [
		"@semantic-release/commit-analyzer",
		"@semantic-release/release-notes-generator",
		[
			"@mridang/semantic-release-helm",
			{
				"chartPath": "charts/zitadel",
				"ociRepo": "oci://ghcr.io/zitadel/zitadel-charts",
				"ociInsecure": false,
				"ghPages": {
					"enabled": true,
					"branch": "gh-pages",
					"dir": "charts",
					"url": "https://zitadel.github.io/zitadel-charts/charts"
				}
			}
		],
		[
			"@semantic-release/github",
			{
				"successComment": false,
				"failComment": false,
				"assets": [
					{
						"path": "dist/charts/*.tgz"
					}
				]
			}
		],
		[
			"@semantic-release/git",
			{
				"message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}",
				"assets": [
					"charts/zitadel/Chart.yaml",
					"charts/zitadel/README.md",
					"README.md"
				]
			}
		]
	]
}
